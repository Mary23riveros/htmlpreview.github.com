    <script>
        // Variables globales
        var nombres = "";
        var apellidos = "";
        var edad = 0;
        var grado = "";
        var tipo = "";
        var contador = 0;
        var correctas = 0;
        var incorrectas = 0;
        var numero1 = 0;
        var numero2 = 0;
        var operacion = 0;



        // Elementos del DOM
        var form = document.querySelector(".form");
        var menu = document.querySelector(".menu");
        var juego = document.querySelector(".juego");
        var resultado = document.querySelector(".resultado");
        var continuar = document.getElementById("continuar");
        var suma = document.querySelector(".suma");
        var resta = document.querySelector(".resta");
        var multiplicacion = document.querySelector(".multiplicacion");
        var division = document.querySelector(".division");
        var salir = document.querySelector(".salir");
        var pregunta = document.getElementById("pregunta");
        var respuesta = document.getElementById("respuesta");
        var enviar = document.getElementById("enviar");
        var correctasP = document.getElementById("correctas");
        var incorrectasP = document.getElementById("incorrectas");


        // Funciones auxiliares
        function generarNumero(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function generarPregunta() {
            numero1 = generarNumero(1, 10);
            numero2 = generarNumero(1, 10);
            if (tipo == "suma") {
                operacion = numero1 + numero2;
                pregunta.textContent = "¿Cuánto es " + numero1 + " + " + numero2 + "?";
            } else if (tipo == "resta") {
                operacion = numero1 - numero2;
                pregunta.textContent = "¿Cuánto es " + numero1 + " - " + numero2 + "?";
            } else if (tipo == "multiplicacion") {
                operacion = numero1 * numero2;
                pregunta.textContent = "¿Cuánto es " + numero1 + " x " + numero2 + "?";
            } else if (tipo == "division") {
                operacion = numero1 / numero2;
                pregunta.textContent = "¿Cuánto es " + numero1 + " / " + numero2 + "?";
            }
            respuesta.value = "";
        }

        function verificarRespuesta() {
            var valor = Number(respuesta.value);
            if (valor == operacion) {
                correctas++;
                alert("¡Correcto!");
            } else {
                incorrectas++;
                alert("¡Incorrecto!");
            }
            contador++;
            if (contador < 10) {
                generarPregunta();
            } else {
                mostrarResultado();
            }
        }

        function mostrarResultado() {
            juego.style.display = "none";
            resultado.style.display = "block";
            correctasP.textContent = "Respuestas correctas: " + correctas;
            incorrectasP.textContent = "Respuestas incorrectas: " + incorrectas;
        }

        function reiniciarJuego() {
            contador = 0;
            correctas = 0;
            incorrectas = 0;
            resultado.style.display = "none";
            menu.style.display = "block";
        }

        // Eventos
        continuar.addEventListener("click", function() {
            nombres = document.getElementById("nombres").value;
            apellidos = document.getElementById("apellidos").value;
            edad = Number(document.getElementById("edad").value);
            grado = document.getElementById("grado").value;
            if (nombres && apellidos && edad && grado) {
                form.style.display = "none";
                menu.style.display = "block";
            } else {
                alert("Por favor, completa todos los campos del formulario.");
            }
        });

        suma.addEventListener("click", function() {
            tipo = "suma";
            menu.style.display = "none";
            juego.style.display = "block";
            generarPregunta();
        });

        resta.addEventListener("click", function() {
            tipo = "resta";
            menu.style.display = "none";
            juego.style.display = "block";
            generarPregunta();
        });

        multiplicacion.addEventListener("click", function() {
            tipo = "multiplicacion";
            menu.style.display = "none";
            juego.style.display = "block";
            generarPregunta();
        });

        division.addEventListener("click", function() {
            tipo = "division";
            menu.style.display = "none";
            juego.style.display = "block";
            generarPregunta();
        });

        salir.addEventListener("click", function() {
            alert("Gracias por usar la aplicación matemática. ¡Hasta pronto!");
            window.close();
        });

        enviar.addEventListener("click", function() {
            verificarRespuesta();
        });
    </script>
</body>
